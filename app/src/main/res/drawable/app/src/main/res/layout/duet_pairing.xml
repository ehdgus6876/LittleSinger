<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Toolbar"
        android:layout_gravity="top"
        android:orientation="vertical"
        />

    <Button
        android:id="@+id/scanningBtn"
        android:text="Connect a device"
        android:textColor="#000000"
        android:textSize="20sp"

        android:layout_width="200dp"
        android:layout_height="60dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignTop="@+id/scannedBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft='true'/>

    <Button
        android:id="@+id/scannedBtn"
        android:text="Make discoverable"
        android:textColor="#000000"
        android:textSize="20sp"

        android:layout_width="200dp"
        android:layout_height="60dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="132dp"
        android:layout_below="@+id/my_toolbar"
        android:layout_toEndOf="@+id/scanningBtn"
        android:layout_toRightOf="@+id/scanningBtn"/>

    <Button
        android:id="@+id/duetstartBtn"
        android:text="듀엣 시작"
        android:textColor="#000000"
        android:textSize="20sp"

        android:layout_width="200dp"
        android:layout_height="60dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/scannedBtn"
        android:layout_centerHorizontal="true" />



</RelativeLayout>